<main>
  <div class="container-row">
    <img class="b-3" src=<%= @user.photo %> alt="user photo">
    <div class="container-col b-3 full-width">
      <h1><%= @user.name %></h1>
      <p class="ratings-box">
        Number of posts:
        <%= @user.posts_counter.nil? ? 0 : @user.posts_counter %>
      </p>
    </div>
  </div>
</main>
<section class="container-col b-3 mb-1">
  <h2>Bio</h2>
  <p><%= @user.bio %></p>
</section>
<section>
  <% @user.posts.each do |post| %>
    <div class="container-col b-3 mb-1">
      <h2><%= post.title %></h2>
      <p><%= post.text %></p>
      <p class="ratings-box">
        Comments:
        <%= post.comments_counter.nil? ? 0 : post.comments_counter %>,
        Likes:
        <%= post.likes_counter.nil? ? 0 : post.likes_counter %>
      </p>
    </div>
  <% end %>
</section>
<section div class="container-col center">
  <button><%= link_to 'See all posts', user_posts_path(@user) %></button>
</section>