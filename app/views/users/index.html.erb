<main>
  <% @users.each do |user| %>
    <div class="container-row">
      <img class="b-3" src=<%= user.photo %> alt="user photo">
      <div class="container-col b-3 full-width">
        <%= link_to user_path(user) do %>
          <h1><%= user.name %></h1>
        <% end %>
        <p class="ratings-box">
          Number of posts:
          <%= user.posts_counter.nil? ? 0 : user.posts_counter %>
        </p>
      </div>
    </div>
  <% end %>
</main>