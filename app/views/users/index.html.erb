<main>
  <% @users.each do |user| %>
    <div>
      <img src=<%= user.photo %> alt="user photo">
      <%= link_to user_path(user) do %>
        <h1><%= user.name %></h1>
        <p>
          Number of posts:
          <%= user.posts_counter.nil? ? 0 : user.posts_counter %>
        </p>
      <% end %>
    </div>
  <% end %>
</main>